<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/debugInfoPanel"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@+id/textLabelsPanel"
    android:layout_above="@+id/btnDebug"
    tools:showIn="@layout/activity_main">

    <TextView
        android:id="@+id/tvAltitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:text="10"
        android:textSize="60sp"
        android:textColor="@color/btnBack"
        android:paddingLeft="18dp"
        android:paddingRight="18dp" />

    <TextView
        android:id="@+id/tvDebugInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/btnBack"

        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"

        android:layout_alignParentBottom="true"
        android:text="100"
        android:padding="6dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp" />

    <FrameLayout
        android:id="@+id/placeholder1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_above="@+id/tvDebugInfo" />

</RelativeLayout>